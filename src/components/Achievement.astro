---
import { useSanityClient, groq } from 'astro-sanity';

const query = groq`*[_type == "achievements"]`;

const achievements = await useSanityClient().fetch(query)
---

<div class="relative achievement">
    <div class="px-5 md:px-0 md:w-5/6 mx-auto py-16 ">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 relative z-[2]">
            <div class="bg-yellow-500 aspect-square flex flex-col justify-center items-center px-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16 lg:w-24 lg:h-24">
                    <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                </svg>
                <h1 class="font-extrabold text-lg md:text-xl pt-1 text-center leading-[1.25rem] md:leading-none">Total Employees</h1>
                <h1 class="pt-2 text-md md:text-lg font-semibold">{achievements[0].totalEmployees}</h1>
            </div>
            <div class="bg-yellow-500 aspect-square flex flex-col justify-center items-center px-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16 lg:w-24 lg:h-24">
                    <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
                </svg>
                <h1 class="font-extrabold text-lg md:text-xl pt-1 text-center leading-[1.25rem] md:leading-none">Total Customer</h1>
                <h1 class="pt-2 text-md md:text-lg font-semibold">{achievements[0].totalCustomer}</h1>
            </div>
            <div class="bg-yellow-500 aspect-square flex flex-col justify-center items-center px-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16 lg:w-24 lg:h-24">
                    <path d="M2.25 2.25a.75.75 0 000 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 00-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 000-1.5H5.378A2.25 2.25 0 017.5 15h11.218a.75.75 0 00.674-.421 60.358 60.358 0 002.96-7.228.75.75 0 00-.525-.965A60.864 60.864 0 005.68 4.509l-.232-.867A1.875 1.875 0 003.636 2.25H2.25zM3.75 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM16.5 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z" />
                </svg>
                <h1 class="font-extrabold text-lg md:text-xl pt-1 text-center leading-[1.25rem] md:leading-none">Total Sales</h1>
                <h1 class="pt-2 text-md md:text-lg font-semibold">{achievements[0].totalSales} Tons</h1>
            </div>
            <div class="bg-yellow-500 aspect-square flex flex-col justify-center items-center px-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16 lg:w-24 lg:h-24">
                    <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
                <h1 class="font-extrabold text-lg md:text-xl pt-1 text-center leading-[1.25rem] md:leading-none">Total Locations</h1>
                <h1 class="pt-2 text-md md:text-lg font-semibold">{achievements[0].totalLocations}</h1>
            </div>
        </div>
    </div>
    <div class="absolute w-full h-56 md:h-32 bg-black z-[1] my-auto top-0 left-0 bottom-0 right-0 stripe"></div>
</div>